<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<div>
  <div>
    <table class="table table-hover">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
        
        </th>

        <th>

        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
        <tr>
          <td>
            <%= a_user.username %>
          </td>
          <% if a_user.private == true %>
            <td>
              Yes
            </td>
          <% else %>
            <td>
              No
            </td>
          <% end %>

          <% if @current_user != nil %>
          <td>
          <form action="/insert_follow_request" method="post">
              <input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">

              <button>
                Follow
              </button>
            </form>

            <a href="# %>">
              unfollow
            </a>
          </td>
          <% else %>
          <td>
          </td>
          <% end %>

          <td>
            <a href="/users/<%= a_user.username %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
